---
import { css } from '../../styled-system/css';

export interface Props {
  year?: number;
  siteName?: string;
}

const { year = new Date().getFullYear(), siteName = 'ようかん' } = Astro.props;
---

<footer class={css({
  background: 'gray.900',
  color: 'white',
  padding: '2rem 0',
  marginTop: 'auto'
})}>
  <div class={css({
    maxWidth: '1200px',
    margin: '0 auto',
    padding: '0 20px'
  })}>
    <div class={css({
      display: 'grid',
      gridTemplateColumns: 'repeat(auto-fit, minmax(250px, 1fr))',
      gap: '2rem',
      marginBottom: '2rem',
      '@media (max-width: 768px)': {
        gridTemplateColumns: '1fr',
        gap: '1.5rem',
        textAlign: 'center'
      }
    })}>
      <!-- サイト情報 -->
      <div>
        <h3 class={css({
          fontSize: '1.2rem',
          fontWeight: 'bold',
          marginBottom: '1rem',
          color: 'teal.300'
        })}>
          {siteName}
        </h3>
        <p class={css({
          color: 'gray.300',
          lineHeight: '1.6',
          margin: '0'
        })}>
          技術的な知見や日常の気づきを共有する個人ブログです。
        </p>
      </div>

      <!-- ナビゲーションリンク -->
      <div>
        <h4 class={css({
          fontSize: '1rem',
          fontWeight: 'semibold',
          marginBottom: '1rem',
          color: 'white'
        })}>
          ナビゲーション
        </h4>
        <ul class={css({
          listStyle: 'none',
          margin: '0',
          padding: '0',
          display: 'flex',
          flexDirection: 'column',
          gap: '0.5rem'
        })}>
          <li>
            <a href="/" class={css({
              color: 'gray.300',
              textDecoration: 'none',
              transition: 'color 0.2s',
              _hover: { color: 'teal.300' }
            })}>
              ホーム
            </a>
          </li>
          <li>
            <a href="/blog" class={css({
              color: 'gray.300',
              textDecoration: 'none',
              transition: 'color 0.2s',
              _hover: { color: 'teal.300' }
            })}>
              ブログ
            </a>
          </li>
          <li>
            <a href="/anko-ui" class={css({
              color: 'gray.300',
              textDecoration: 'none',
              transition: 'color 0.2s',
              _hover: { color: 'teal.300' }
            })}>
              Anko-UI
            </a>
          </li>
        </ul>
      </div>

      <!-- Anko-UIリンク -->
      <div>
        <h4 class={css({
          fontSize: '1rem',
          fontWeight: 'semibold',
          marginBottom: '1rem',
          color: 'white'
        })}>
          Anko-UI
        </h4>
        <ul class={css({
          listStyle: 'none',
          margin: '0',
          padding: '0',
          display: 'flex',
          flexDirection: 'column',
          gap: '0.5rem'
        })}>
          <li>
            <a href="/anko-ui/docs" class={css({
              color: 'gray.300',
              textDecoration: 'none',
              transition: 'color 0.2s',
              _hover: { color: 'teal.300' }
            })}>
              ドキュメント
            </a>
          </li>
          <li>
            <a href="/anko-ui/playground" class={css({
              color: 'gray.300',
              textDecoration: 'none',
              transition: 'color 0.2s',
              _hover: { color: 'teal.300' }
            })}>
              プレイグラウンド
            </a>
          </li>
          <li>
            <a href="https://github.com" class={css({
              color: 'gray.300',
              textDecoration: 'none',
              transition: 'color 0.2s',
              _hover: { color: 'teal.300' }
            })}>
              GitHub
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- コピーライト -->
    <div class={css({
      borderTop: '1px solid',
      borderColor: 'gray.700',
      paddingTop: '1.5rem',
      textAlign: 'center'
    })}>
      <p class={css({
        margin: '0',
        color: 'gray.400',
        fontSize: '0.9rem'
      })}>
        © {year} {siteName}. All rights reserved.
      </p>
    </div>
  </div>
</footer>
