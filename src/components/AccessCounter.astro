---
/**
 * @file アクセスカウンターコンポーネント
 * @description 昭和風のデジタルカウンター表示コンポーネント
 * @author YOUR_NAME
 * @version 1.0.0
 */

// 実際のカウンターではなく表示用のダミーデータです
const count = "000387";
---

<div class="counter-wrapper">
    <div class="counter-label">あなたは</div>
    <div class="counter-container">
        {count.split('').map((digit) => (
            <div class="counter-digit">
                <span>{digit}</span>
            </div>
        ))}
    </div>
    <div class="counter-label">人目の訪問者です</div>
</div>

<style>
    .counter-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin: 30px 0;
        flex-wrap: wrap;
    }
    
    .counter-label {
        font-weight: bold;
        font-size: 18px;
    }
    
    .counter-container {
        display: flex;
        gap: 3px;
        background-color: #000;
        padding: 5px;
        border: 2px solid #444;
        box-shadow: 0 0 0 1px #000, inset 0 0 5px rgba(0,255,0,0.5);
    }
    
    .counter-digit {
        width: 20px;
        height: 30px;
        background-color: #000;
        display: flex;
        justify-content: center;
        align-items: center;
        color: #0f0;
        font-family: 'VT323', 'Courier New', monospace;
        font-size: 24px;
        font-weight: bold;
        text-shadow: 0 0 5px #0f0;
        position: relative;
        overflow: hidden;
    }
    
    .counter-digit::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 15%;
        background-color: rgba(255,255,255,0.1);
    }
    
    .counter-digit::after {
        content: "";
        position: absolute;
        width: 100%;
        height: 1px;
        background: rgba(0,255,0,0.3);
        top: 50%;
        left: 0;
        box-shadow: 0 0 3px #0f0;
    }
    
    @media (max-width: 480px) {
        .counter-wrapper {
            flex-direction: column;
        }
    }
</style> 