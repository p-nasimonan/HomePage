---
import { css } from '../../styled-system/css';
import { btn } from '../../styled-system/recipes';

export interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
}

const { 
  title, 
  subtitle, 
  ctaText = '詳しく見る',
  ctaLink = '#',
  variant = 'primary',
  size = 'lg'
} = Astro.props;

const heroStyle = css({
  background: 'linear-gradient(135deg, #0F766E 0%, #5EEAD4 100%)',
  color: 'white',
  padding: '5rem 0',
  textAlign: 'center',
  '@media (max-width: 768px)': {
    padding: '3rem 0'
  }
});

const containerStyle = css({
  maxWidth: '1200px',
  margin: '0 auto',
  padding: '0 20px'
});

const titleStyle = css({
  fontSize: '3.5rem',
  marginBottom: '1rem',
  fontWeight: 'bold',
  lineHeight: '1.2',
  '@media (max-width: 768px)': {
    fontSize: '2.5rem'
  }
});

const subtitleStyle = css({
  fontSize: '1.3rem',
  marginBottom: '2.5rem',
  opacity: '0.95',
  lineHeight: '1.6',
  maxWidth: '600px',
  margin: '0 auto 2.5rem',
  '@media (max-width: 768px)': {
    fontSize: '1.1rem',
    marginBottom: '2rem'
  }
});
---

<section class={heroStyle}>
  <div class={containerStyle}>
    <div>
      <h2 class={titleStyle}>{title}</h2>
      <p class={subtitleStyle}>{subtitle}</p>
      <a href={ctaLink} class={btn({ variant, size })}>{ctaText}</a>
    </div>
  </div>
</section>
