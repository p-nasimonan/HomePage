---
import { card } from '../styled-system/recipes';
import { css } from '../styled-system/css';

export interface Props {
  icon: string;
  title: string;
  description: string;
  variant?: 'default' | 'elevated' | 'cream' | 'mint';
  size?: 'sm' | 'md' | 'lg';
}

const { 
  icon, 
  title, 
  description, 
  variant = 'default',
  size = 'lg'
} = Astro.props;
---

<div class={card({ variant, size })}>
  <div class={css({
    fontSize: '3rem',
    marginBottom: '1rem',
    textAlign: 'center'
  })}>{icon}</div>
  <h4 class={css({
    fontSize: '1.3rem',
    marginBottom: '1rem',
    color: 'semantic.text.primary',
    textAlign: 'center'
  })}>{title}</h4>
  <p class={css({
    color: 'semantic.text.secondary',
    textAlign: 'center'
  })}>{description}</p>
</div>
