---
import { css } from '../styled-system/css';
import { token } from '../styled-system/tokens';
import '../styled-system/styles.css';
---

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>CSS Function Test</title>
</head>
<body>
    <div class={css({ maxWidth: '1200px', margin: '0 auto', padding: '2rem' })}>
        <h1 class={css({ fontSize: '2xl', fontWeight: 'bold', marginBottom: '2rem' })}>
            CSS Function カラーシステムテスト
        </h1>
        
        <div class={css({ 
            display: 'grid', 
            gridTemplateColumns: 'repeat(auto-fit, minmax(250px, 1fr))', 
            gap: '2rem' 
        })}>
            <!-- Teal Colors -->
            <div class={css({ 
                border: '1px solid', 
                borderColor: 'gray.200', 
                borderRadius: '8px', 
                padding: '1rem' 
            })}>
                <h2 class={css({ marginTop: '0', marginBottom: '1rem' })}>Teal</h2>
                <div class={css({ 
                    backgroundColor: 'teal.50', 
                    padding: '1rem', 
                    marginBottom: '0.5rem', 
                    borderRadius: '4px' 
                })}>
                    teal.50 - {token('colors.teal.50')}
                </div>
                <div class={css({ 
                    backgroundColor: 'teal.100', 
                    padding: '1rem', 
                    marginBottom: '0.5rem', 
                    borderRadius: '4px' 
                })}>
                    teal.100 - {token('colors.teal.100')}
                </div>
                <div class={css({ 
                    backgroundColor: 'teal.500', 
                    color: 'white', 
                    padding: '1rem', 
                    marginBottom: '0.5rem', 
                    borderRadius: '4px' 
                })}>
                    teal.500 - {token('colors.teal.500')}
                </div>
                <div class={css({ 
                    backgroundColor: 'teal.700', 
                    color: 'white', 
                    padding: '1rem', 
                    marginBottom: '0.5rem', 
                    borderRadius: '4px' 
                })}>
                    teal.700 - {token('colors.teal.700')}
                </div>
            </div>

            <!-- Mint Colors -->
            <div class={css({ 
                border: '1px solid', 
                borderColor: 'gray.200', 
                borderRadius: '8px', 
                padding: '1rem' 
            })}>
                <h2 class={css({ marginTop: '0', marginBottom: '1rem' })}>Mint</h2>
                <div class={css({ 
                    backgroundColor: 'mint.50', 
                    padding: '1rem', 
                    marginBottom: '0.5rem', 
                    borderRadius: '4px' 
                })}>
                    mint.50 - {token('colors.mint.50')}
                </div>
                <div class={css({ 
                    backgroundColor: 'mint.100', 
                    padding: '1rem', 
                    marginBottom: '0.5rem', 
                    borderRadius: '4px' 
                })}>
                    mint.100 - {token('colors.mint.100')}
                </div>
                <div class={css({ 
                    backgroundColor: 'mint.300', 
                    padding: '1rem', 
                    marginBottom: '0.5rem', 
                    borderRadius: '4px' 
                })}>
                    mint.300 - {token('colors.mint.300')}
                </div>
                <div class={css({ 
                    backgroundColor: 'mint.700', 
                    color: 'white', 
                    padding: '1rem', 
                    marginBottom: '0.5rem', 
                    borderRadius: '4px' 
                })}>
                    mint.700 - {token('colors.mint.700')}
                </div>
            </div>

            <!-- Semantic Colors -->
            <div class={css({ 
                border: '1px solid', 
                borderColor: 'gray.200', 
                borderRadius: '8px', 
                padding: '1rem' 
            })}>
                <h2 class={css({ marginTop: '0', marginBottom: '1rem' })}>Semantic</h2>
                <div class={css({ 
                    backgroundColor: 'teal.bg', 
                    padding: '1rem', 
                    marginBottom: '0.5rem', 
                    borderRadius: '4px' 
                })}>
                    teal.bg - {token('colors.teal.bg')}
                </div>
                <div class={css({ 
                    backgroundColor: 'mint.lite', 
                    padding: '1rem', 
                    marginBottom: '0.5rem', 
                    borderRadius: '4px' 
                })}>
                    mint.lite - {token('colors.mint.lite')}
                </div>
                <div class={css({ 
                    backgroundColor: 'sage.regular', 
                    padding: '1rem', 
                    marginBottom: '0.5rem', 
                    borderRadius: '4px' 
                })}>
                    sage.regular - {token('colors.sage.regular')}
                </div>
                <div class={css({ 
                    backgroundColor: 'cream.deep', 
                    color: 'white', 
                    padding: '1rem', 
                    marginBottom: '0.5rem', 
                    borderRadius: '4px' 
                })}>
                    cream.deep - {token('colors.cream.deep')}
                </div>
            </div>

            <!-- Status Colors -->
            <div class={css({ 
                border: '1px solid', 
                borderColor: 'gray.200', 
                borderRadius: '8px', 
                padding: '1rem' 
            })}>
                <h2 class={css({ marginTop: '0', marginBottom: '1rem' })}>Status</h2>
                <div class={css({ 
                    backgroundColor: 'status.success', 
                    color: 'white', 
                    padding: '1rem', 
                    marginBottom: '0.5rem', 
                    borderRadius: '4px' 
                })}>
                    status.success - {token('colors.status.success')}
                </div>
                <div class={css({ 
                    backgroundColor: 'status.warning', 
                    color: 'white', 
                    padding: '1rem', 
                    marginBottom: '0.5rem', 
                    borderRadius: '4px' 
                })}>
                    status.warning - {token('colors.status.warning')}
                </div>
                <div class={css({ 
                    backgroundColor: 'status.error', 
                    color: 'white', 
                    padding: '1rem', 
                    marginBottom: '0.5rem', 
                    borderRadius: '4px' 
                })}>
                    status.error - {token('colors.status.error')}
                </div>
                <div class={css({ 
                    backgroundColor: 'status.info', 
                    color: 'white', 
                    padding: '1rem', 
                    marginBottom: '0.5rem', 
                    borderRadius: '4px' 
                })}>
                    status.info - {token('colors.status.info')}
                </div>
            </div>
        </div>
    </div>
</body>
</html>
